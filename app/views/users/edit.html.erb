<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h1>マイデータ編集画面</h1>
      <% if @user.errors.any? %>
        <%= @user.errors.count %> errors
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>

        <div class="form-group">
        <p>ペンネーム</p>
        <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control name" %>
        </div>

        <div class="form-group">
        <p>イメージ画像</p>
        <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*", class:"form-control-file user_image" %>
        </div>

        <div class="form-group">
        <p>自己紹介</p>
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", class:"form-control introduction" %>
        </div>

        <div class="form-group">
        <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>