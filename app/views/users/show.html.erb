<div class="row">

  <div class="col-md-3">
    <%= render 'recipes/list', user: @user %>
  </div>

  <div class="col-md-8 offset-md-1">
    <h2>マイレシピ</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>レシピ名</th>
          <th colspan="3"></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @recipe.each do |recipe| %>
          <tr>
            <td>
              <%= link_to user_path(recipe.user) do %>
                <%= image_tag recipe.user.get_profile_image(100, 100) %>
              <% end %>
            </td>
            <td><%= link_to recipe.recipe_name, recipe_path(recipe) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<footer>
  <nav class="navbar navbar-expand-lg navbar-dark bg-custom-image">
    <div class="container">
      <div>
        <%= link_to unsubscribe_path do %>
          <i class="fa-solid fa-sign-in-alt"></i> 退会
        <% end %>
      </div>
    </div>
  </nav>
</footer>