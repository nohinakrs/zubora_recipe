<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2 class="mt-3">レシピ投稿</h2>

      <% if @newrecipe.errors.any? %>
        <%= @newrecipe.errors.count %> errors
          <ul>
            <% @newrecipe.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>

      <%= form_with model: @newrecipe do |f| %>
        <div class="form-group">
          <p>レシピ画像</p>
          <%= f.file_field :image, placeholder: "Image", accept: "image/*", class:"form-control-file user_image" %>
        </div>
        <div class="form-group">
          <p>レシピ名</p>
          <%= f.text_field :recipe_name, class:"form-control book_title" %>
        </div>
        <div class="form-group">
          <p>レシピ内容</p>
          <%= f.text_area :recipe, class:"form-control book_body" %>
        </div>
        <div class="form-group">
          <%= f.submit 'レシピ記録',class:"btn btn-success"%>
        </div>
      <% end %>

      <%= link_to "戻る", recipes_path %>
    </div>
  </div>
</div>