<div class="col-md-3">
  <h2>User info</h2>
      <table class="table">
          <tbody>
              <tr>
                  <%= image_tag user.get_profile_image(100, 100) %>
                  <td><% if list.image.attached? %>
    <%= image_tag user.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %></td>
              </tr>
              <tr>
                  <th>name</th>
                  <th><%= user.name %></th>
              </tr>
              <tr>
                  <th>introduction</th>
                  <th><%= user.introduction %></th>
              </tr>
          </tbody>
      </table>

      <div class="row">
          <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
      </div>

      <div class="row">
      <%= link_to new_recipe_path, class: "btn btn-outline-secondary btn-block" do %>
      <p>レシピ作成</p>
      <% end %>
      </div>
